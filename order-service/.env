# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///order_service.db
# For PostgreSQL: DATABASE_URL=postgresql://username:password@localhost:5432/order_service

# Service URLs for Microservices Communication
INVENTORY_SERVICE_URL=http://inventory-service:5001
USER_SERVICE_URL=http://user-service:5000
ITEM_SERVICE_URL=http://item-service:5003
QUALITY_CONTROL_SERVICE_URL=http://quality-control-service:5004

# API Configuration
API_TITLE=Order Service API
API_VERSION=v1

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://frontend:3000

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Request Timeout (seconds)
REQUEST_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/order_service.log

# Redis Configuration (if using Redis for caching)
REDIS_URL=redis://redis:6379/0

# Email Configuration (if sending notifications)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Monitoring & Health Check
HEALTH_CHECK_ENABLED=True
METRICS_ENABLED=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_DEFAULT=100 per hour